
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads and writes to all collections.
    match /{document=**} {
      allow read, write: if false;
    }

    // Explicitly deny client-side access to sensitive collections.
    // Access to these should only be granted via server-side Admin SDKs.
    
    // Stores the mapping from a person's hash to their eligibility status.
    match /eligibility/{person_hash} {
      allow read, write: if false;
    }
    
    // Stores individual device credentials linked to a person_hash.
    match /devices/{deviceId} {
      allow read, write: if false;
    }

    // Stores pending QR code link challenges.
    match /links/{linkId} {
      allow read, write: if false;
    }
    
    // In a real application, you would define rules for other collections.
    // For example, you might allow authenticated users to read public poll data.
    // match /topics/{topicId} {
    //   allow read: if request.auth != null;
    //   allow write: if false; // Writes should go through a function
    // }
  }
}
